<section>
    <div class="container border-b">
        <h1> {{section.settings.title}} </h1>
    </div>
</section><!-- Start: 1 Row 2 Columns -->
<div class="container">
    <div class="row mt-3">
        {% for block in section.blocks %}

        <div class="col-6 col-sm-6 col-md-6 team-list">
            <img class="w-100" src="{{block.settings.image | img_url: 'master'}}">
            <a href="{{block.settings.link}}"> {{block.settings.title}} </a>
        </div>

        {% endfor %}


    </div>
</div><!-- End: 1 Row 2 Columns -->




{% schema %}
{
"name": "Disenadores",
"settings": [
{
"type": "text",
"id": "title",
"label": "Title"
}
],
"blocks": [
{
"type": "disenadores",
"name": "disenadores",
"settings": [
{
"type": "image_picker",
"id": "image",
"label": "image"
},
{
"type": "text",
"id": "title",
"label": "title"
},
{
"type": "url",
"id": "link",
"label": "link"
}
]
}
]
}
{% endschema %}