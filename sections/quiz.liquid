<div class="container mt-5">
    <div class="row boder-line pb-3">
        <div class="col-10 col-md-6 ps-0">
            <h4>{{section.settings.title}}</h4>
        </div>
        <div class="col-2 col-md-6 pe-0"><img class="ms-auto d-block" src="{{'close.static.png' | asset_url}}"></div>
    </div>
</div>
<section class="mt-3">
    <div class="container">
        <div class="row pb-5" id="quiz">
            <div class="col-md-6 ps-0 quiz-col pb-md-2 pb-5">
                <ol class="breadcrumb s-family w-100 flex-nowrap overflow-auto">
                    <li class="breadcrumb-item quiz-bdc"><a href="#"><span>Tamaño</span></a></li>
                    <li class="breadcrumb-item quiz-bdc active"><a href="#"><span>Modelo&nbsp;</span></a></li>
                    <li class="breadcrumb-item quiz-bdc"><a href="#"><span>Textil</span></a></li>
                    <li class="breadcrumb-item quiz-bdc"><a href="#"><span>Costura</span></a></li>
                    <li class="breadcrumb-item quiz-bdc"><a href="#"><span>Color</span></a></li>
                    <li class="breadcrumb-item quiz-bdc"><a href="#"><span>Costado</span></a></li>
                </ol>
                <div class="w-100">


                    {% for block in section.blcoks %}
                    {% assign b = block.settings %}

                    {% if b.type == 'tamano' %}
                    {% render 'quiz', b:b %}

                    {% elsif b.type == 'modelo' %}

                    {% render 'quiz', b:b %}


                    {% endif %}


                    {% endfor %}






                    <h4 class="font-12 text2-color s-family">¿Necesitas una personalización más avanzada?<a
                            class="text-uppercase ms-3 text2-color s-family text-decoration-none boder-line pb-1"
                            href="#">contáctanos</a></h4>
                    <div class="hstack mt-5"><a
                            class="ms-auto me-4 text-decoration-none text-uppercase p-color s-family d-flex align-items-center"
                            href="#"><i class="material-icons">keyboard_arrow_left</i>&nbsp;AtrÁs</a><a
                            class="main-button text-center text-uppercase" href="#">siguiente</a></div>
                </div>
            </div>
            <div class="col-md-6 pe-0 ps-0"><img class="w-100" src="/sofa.png"></div>
        </div>
    </div>
</section>


{% schema %}
{
"name": "quiz",
"settings": [{
"type": "text",
"id": "title",
"label": "Title"
},
{
"type": "image_picker",
"id": "sofa",
"label": "Sofá image"
}
],
"blocks": [{
"type": "questions",
"name": "questions",
"settings": [{
"type": "text",
"id": "title",
"label": "Title"
},
{
"type": "image_picker",
"id": "image",
"label": "Image"
},
{
"type": "select",
"options": [{
"value": "tamano",
"label": "TAMANO"
},
{
"value": "modelo",
"label": "MODELO"
},
{
"value": "textil",
"label": "TEXTIL"
},
{
"value": "costura",
"label": "COSTURA"
},
{
"value": "color",
"label": "COLOR"
},
{
"value": "costados",
"label": "COSTADOS"
}
],
"id": "type"
}
]
}],
"presets": [{
"category": "Quiz",
"name": "Quiz"
}]
}
{% endschema %}